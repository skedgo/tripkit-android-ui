<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">

            <solid android:color="@android:color/transparent" />

            <corners android:radius="@dimen/cardview_corner_radius" />

            <padding
                android:right="@dimen/spacing_xx_small"
                android:left="@dimen/spacing_xx_small"
                android:top="@dimen/spacing_xx_small"
                android:bottom="@dimen/spacing_xx_small" />

            <stroke
                android:color="@color/black4"
                android:width="1dp" />

        </shape>
    </item>

    <item android:drawable="?android:attr/selectableItemBackground" />

</layer-list>