<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.skedgo.tripkit.ui.tripresults.TripResultTripViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:contentDescription="@{viewModel.contentDescription}"
        android:onClick="@{() -> viewModel.onItemClicked()}"
        android:orientation="vertical"
        android:padding="16dp"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/title"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="@{viewModel.isMissedPreBooking() ? 0.3f : 1f}"
            android:singleLine="true"
            android:text="@{viewModel.title}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="10:11" />

        <TextView
            android:id="@+id/subtitle"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.subtitle}"
            android:textColor="@color/black1"
            android:visibility="@{!viewModel.isHideExactTimes}"
            app:layout_constraintBottom_toBottomOf="@+id/title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/title"
            tools:text="30 minutes" />

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/segmentsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:alpha="@{viewModel.isMissedPreBooking() ? 0.3f : 1f}"
            app:entries="@{viewModel.segments}"
            app:flexDirection="row"
            app:flexWrap="wrap"
            android:layout_marginEnd="@dimen/spacing_small"
            app:layout="@{@layout/trip_result_segment_item}"
            app:layout_constraintEnd_toStartOf="@+id/bAction"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"/>

        <Button
            android:id="@+id/bAction"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="@android:color/white"
            tools:text="Action"
            android:layout_marginTop="@dimen/spacing_small"
            android:padding="0dp"
            android:textSize="@dimen/font_size_small"
            android:textAllCaps="false"
            app:backgroundTint="@color/colorAccent"
            android:visibility="@{viewModel.getQuickBooking() != null}"
            android:text="@{viewModel.getQuickBooking().booking.title}"
            app:clickWithDebounce="@{() -> viewModel.onQuickBookingActionClicked()}"
            android:background="@drawable/bg_round_accent"
            app:layout_constraintTop_toBottomOf="@+id/subtitle"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>